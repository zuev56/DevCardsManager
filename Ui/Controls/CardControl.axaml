<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DevCardsManager.Ui.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DevCardsManager.Ui.Controls.CardControl"
             x:DataType="vm:CardViewModel">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!-- Светлая тема -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="InfoTextColor" Color="#FF75758C"/>
                    <SolidColorBrush x:Key="InfoButtonColor" Color="#5FD4D6FF"/>
                </ResourceDictionary>

                <!-- Тёмная тема -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="InfoTextColor" Color="#FFE9E9FF"/>
                    <SolidColorBrush x:Key="InfoButtonColor" Color="#3B9FA0BF"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Height" Value="50"/>

            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#44D6E2FF"/>
            </Style>

            <Style Selector="^:not(:pointerover)">
                <Setter Property="Background" Value="#20ffffff"/>
            </Style>

            <Style Selector="^ :is(Button)">
                <Setter Property="Height" Value="25" />
                <Setter Property="Width" Value="25" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Background" Value="Transparent" />

                <Style Selector="^:pressed ContentPresenter">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
                <Style Selector="^:disabled ContentPresenter">
                    <Setter Property="Opacity" Value="0.3" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </Style>
        </Style>

        <Style Selector="Border.selected">
            <Setter Property="Background" Value="#3CE0E0E0"/>
        </Style>

        <Style Selector=":is(TextBlock).info-title">
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Foreground" Value="{DynamicResource InfoTextColor}" />
        </Style>
        <Style Selector=":is(TextBlock).info-value">
            <Setter Property="Foreground" Value="{DynamicResource InfoTextColor}" />
        </Style>
    </UserControl.Styles>

    <Border x:Name="Card" Classes="card"
            Classes.selected="{Binding IsSelected}"
            PointerPressed="OnCardPointerPressed">
        <Panel>

            <Button Command="{Binding PinCommand}"
                    CommandParameter="{Binding}"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    HorizontalContentAlignment="Left" VerticalContentAlignment="Top"
                    Height="18" Width="18" CornerRadius="0,0,15,0" >
                <Image Source="/Assets/thumbtack_32x32.png" Width="14" />

                <ToolTip.Tip>
                    <StackPanel>
                        <TextBlock Text="Закрепить" IsVisible="{Binding !#Card.((vm:CardViewModel)DataContext).IsPinned}" />
                        <TextBlock Text="Открепить" IsVisible="{Binding #Card.((vm:CardViewModel)DataContext).IsPinned}" />
                    </StackPanel>
                </ToolTip.Tip>

                <Interaction.Behaviors>
                    <!-- TODO: Куча ошибок в логах, но работает как надо -->

                    <!-- Кнопка видна, когда мышь над карточкой или когда карточка закреплена -->
                    <DataTriggerBehavior Value="True" x:Name="VisibleWhenPinnedOrPointerOverBehavior">
                        <DataTriggerBehavior.Binding>
                            <MultiBinding Converter="{x:Static BoolConverters.Or}" >
                                <Binding Path="#Card.((vm:CardViewModel)DataContext).IsPinned" />
                                <Binding Path="#Card.IsPointerOver" />
                            </MultiBinding>
                        </DataTriggerBehavior.Binding>
                        <ChangePropertyAction PropertyName="Opacity" Value="1" />
                        <ChangePropertyAction PropertyName="IsVisible" Value="True" />
                    </DataTriggerBehavior>

                    <!-- Кнопка полупрозрачная, когда мышь над карточкой, но карточка не закреплена -->
                    <!-- Светлая тема -->
                    <DataTriggerBehavior Value="True" x:Name="SemiTransparentWhenNotPinnedAndPointerOverLightBehavior">
                        <DataTriggerBehavior.Binding>
                            <MultiBinding Converter="{x:Static BoolConverters.And}" >
                                <Binding Path="$self.ActualThemeVariant" Converter="{StaticResource EqualsConverter}" ConverterParameter="{x:Static ThemeVariant.Light}" />
                                <Binding Path="!#Card.((vm:CardViewModel)DataContext).IsPinned" />
                                <Binding Path="#Card.IsPointerOver" />
                            </MultiBinding>
                        </DataTriggerBehavior.Binding>
                        <ChangePropertyAction PropertyName="Background" Value="White" />
                        <ChangePropertyAction PropertyName="Opacity" Value="0.5" />
                        <ChangePropertyAction PropertyName="BorderBrush" Value="White" />
                    </DataTriggerBehavior>
                    <!-- Тёмная тема -->
                    <DataTriggerBehavior Value="True" x:Name="SemiTransparentWhenNotPinnedAndPointerOverDarkBehavior">
                        <DataTriggerBehavior.Binding>
                            <MultiBinding Converter="{x:Static BoolConverters.And}" >
                                <Binding Path="$self.ActualThemeVariant" Converter="{StaticResource EqualsConverter}" ConverterParameter="{x:Static ThemeVariant.Dark}" />
                                <Binding Path="!#Card.((vm:CardViewModel)DataContext).IsPinned" />
                                <Binding Path="#Card.IsPointerOver" />
                            </MultiBinding>
                        </DataTriggerBehavior.Binding>
                        <ChangePropertyAction PropertyName="Opacity" Value="0.5" />
                        <ChangePropertyAction PropertyName="Background" Value="Transparent" />
                    </DataTriggerBehavior>

                    <!-- Кнопка скрыта, если мышь не над карточкой и карточка не закреплена -->
                    <DataTriggerBehavior Value="true" x:Name="HiddenWhenNotPinnedAndNotUnderPointerBehavior">
                        <DataTriggerBehavior.Binding>
                            <MultiBinding Converter="{x:Static BoolConverters.And}" >
                                <Binding Path="!#Card.((vm:CardViewModel)DataContext).IsPinned" />
                                <Binding Path="!#Card.IsPointerOver" />
                            </MultiBinding>
                        </DataTriggerBehavior.Binding>
                        <ChangePropertyAction PropertyName="IsVisible" Value="False" />
                    </DataTriggerBehavior>
                </Interaction.Behaviors>
            </Button>

            <StackPanel Orientation="Horizontal" Spacing="3" Margin="10,0" >

                <Image Source="/Assets/card_32x23.png" Height="24" />

                <Button Command="{Binding InsertCommand}"
                        CommandParameter="{Binding}">
                    <Image Source="/Assets/insert_32x32.png" Stretch="Fill" />
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="Приложить карту" IsVisible="{Binding !IsInserted}" />
                            <TextBlock Text="Убрать и снова приложить карту" IsVisible="{Binding IsInserted}" />
                        </StackPanel>
                    </ToolTip.Tip>
                </Button>

                <Button Command="{Binding InsertOnTimeCommand}"
                        CommandParameter="{Binding}">
                    <Image Source="/Assets/insert_on_time_32x32.png" Stretch="Fill" />
                    <ToolTip.Tip>
                        <TextBlock Text="{Binding $parent[ItemsRepeater].((vm:CardManagerViewModel)DataContext).InsertCardOnTimeSeconds, StringFormat='Приложить карту на {0} секунд, затем убрать', FallbackValue='Binding error'}" />
                    </ToolTip.Tip>
                </Button>

                <Button Command="{Binding RemoveCommand}"
                        CommandParameter="{Binding}"
                        ToolTip.Tip="Убрать карту">
                    <Image Source="/Assets/remove_32x32.png" Stretch="Fill" />
                </Button>

                <StackPanel Spacing="3" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CardName}" />
                    <StackPanel Orientation="Horizontal" Spacing="3">
                        <Button x:Name="InfoButton"
                                Content="info" Background="{DynamicResource InfoButtonColor}"
                                Height="18" Width="50" HorizontalContentAlignment="Center"
                                Click="InfoButton_OnClick"
                                ToolTip.Tip="Показать информацию"/>

                        <Popup x:Name="InfoPopup"
                               PlacementTarget="{Binding #InfoButton}"
                               Placement="RightEdgeAlignedTop">
                            <Border Background="{Binding $parent[Window].Background}"
                                    BorderBrush="{DynamicResource InfoButtonColor}" BorderThickness="1"
                                    MaxWidth="400" Padding="7" CornerRadius="5">
                                <Panel>

                                    <Grid ColumnDefinitions="Auto,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="3" ColumnSpacing="5">
                                        <Button Grid.Row="0" Grid.Column="2" Click="Button_OnClick"
                                                VerticalAlignment="Top" Height="15" Width="15" Background="Transparent" >
                                            <Image Source="/Assets/clear_32x32.png" Stretch="Uniform" Height="15" />
                                        </Button>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Classes="info-title" Text="Модель:" />
                                        <SelectableTextBlock Grid.Row="0" Grid.Column="1" Classes="info-value" Text="{Binding CardModel}" />
                                        <TextBlock Grid.Row="1" Grid.Column="0" Classes="info-title" Text="UID:" ToolTip.Tip="Уникальный идентификатор" />
                                        <SelectableTextBlock Grid.Row="1" Grid.Column="1" Classes="info-value" Text="{Binding UidString}" />
                                        <TextBlock Grid.Row="2" Grid.Column="0" Classes="info-title" Text="CSN:" ToolTip.Tip="Серийный номер чипа" />
                                        <SelectableTextBlock Grid.Row="2" Grid.Column="1" Classes="info-value" Text="{Binding ChipSerialNumber}" />
                                    </Grid>
                                </Panel>
                            </Border>
                        </Popup>

                        <TextBlock Text="UID:" FontSize="11" Foreground="{DynamicResource InfoTextColor}" VerticalAlignment="Bottom" />
                        <SelectableTextBlock Text="{Binding UidString}" FontSize="11" Foreground="{DynamicResource InfoTextColor}" VerticalAlignment="Bottom" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>


        </Panel>
    </Border>
</UserControl>